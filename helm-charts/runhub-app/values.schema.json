{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "definitions": {
    "global": {
      "type": "object",
      "properties": {
        "env": {
          "type": "object",
          "properties": {
            "dev": {
              "type": "boolean",
              "const": true
            },
            "prod": {
              "type": "boolean",
              "const": true
            }
          },
          "minProperties": 1,
          "maxProperties": 1,
          "additionalProperties": false
        },
        "services": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "subdomain": {
                "type": "string"
              },
              "srcPath": {
                "type": "string"
              }
            },
            "required": [
              "subdomain",
              "srcPath"
            ],
            "additionalProperties": false
          },
          "minProperties": 1
        },
        "prodDomain": {
          "type": "string"
        },
        "containerRegistryCredentials": {
          "type": "object",
          "properties": {
            "server": {
              "type": "string"
            },
            "path": {
              "type": "string"
            },
            "username": {
              "type": "string"
            },
            "password": {
              "type": "string"
            }
          },
          "required": [
            "server",
            "path",
            "username",
            "password"
          ],
          "additionalProperties": false
        },
        "tls": {
          "type": "object",
          "properties": {
            "letsEncrypt": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string"
                }
              },
              "required": [
                "email"
              ],
              "additionalProperties": false
            },
            "cloudflareCredentials": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string"
                },
                "apiToken": {
                  "type": "string"
                }
              },
              "required": [
                "email",
                "apiToken"
              ],
              "additionalProperties": false
            }
          },
          "required": [
            "letsEncrypt",
            "cloudflareCredentials"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "env",
        "services",
        "containerRegistryCredentials"
      ],
      "additionalProperties": false
    },
    "defaults": {
      "type": "object",
      "properties": {
        "dependencies": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "const": false
            }
          },
          "required": [
            "enabled"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "dependencies"
      ],
      "additionalProperties": false
    }
  },
  "if": {
    "properties": {
      "global": {
        "properties": {
          "env": {
            "required": [
              "dev"
            ]
          }
        }
      }
    }
  },
  "then": {
    "type": "object",
    "properties": {
      "global": {
        "$ref": "#/definitions/global"
      },
      "dev": {
        "type": "object"
      },
      "defaults": {
        "$ref": "#/definitions/defaults"
      }
    },
    "required": [
      "global",
      "dev",
      "defaults"
    ],
    "additionalProperties": false
  },
  "else": {
    "type": "object",
    "properties": {
      "global": {
        "$ref": "#/definitions/global"
      },
      "prod": {
        "type": "object"
      },
      "defaults": {
        "$ref": "#/definitions/defaults"
      }
    },
    "required": [
      "global",
      "prod",
      "defaults"
    ],
    "additionalProperties": false
  }
}
