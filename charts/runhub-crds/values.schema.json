{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "environment": {
      "type": "object",
      "properties": {
        "development": {
          "type": "boolean",
          "const": true
        },
        "production": {
          "type": "boolean",
          "const": true
        }
      },
      "minProperties": 1,
      "maxProperties": 1,
      "additionalProperties": false
    },
    "defaults": {
      "type": "object",
      "properties": {
        "dependencies": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "const": false
            }
          },
          "required": [
            "enabled"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "dependencies"
      ],
      "additionalProperties": false
    },
    "knative-crds": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "global": {
          "type": "object",
          "additionalProperties": false
        }
      },
      "required": [
        "global"
      ],
      "additionalProperties": false
    },
    "tekton-crds": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "global": {
          "type": "object",
          "additionalProperties": false
        }
      },
      "required": [
        "global"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "environment",
    "defaults"
  ],
  "additionalProperties": false
}
