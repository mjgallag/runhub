{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "global": {
      "type": "object",
      "properties": {
        "environment": {
          "type": "object",
          "properties": {
            "dev": {
              "type": "boolean",
              "const": true
            },
            "prod": {
              "type": "boolean",
              "const": true
            }
          },
          "minProperties": 1,
          "maxProperties": 1,
          "additionalProperties": false
        },
        "prodDomain": {
          "type": "string"
        },
        "services": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "subdomain": {
                "type": "string"
              },
              "srcPath": {
                "type": "string"
              }
            },
            "required": [
              "subdomain",
              "srcPath"
            ],
            "additionalProperties": false
          },
          "minProperties": 1
        },
        "containerRegistryCredentials": {
          "type": "object",
          "properties": {
            "server": {
              "type": "string"
            },
            "username": {
              "type": "string"
            },
            "password": {
              "type": "string"
            }
          },
          "required": [
            "server",
            "username",
            "password"
          ],
          "additionalProperties": false
        },
        "tls": {
          "type": "object",
          "properties": {
            "letsEncrypt": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string"
                }
              },
              "required": [
                "email"
              ],
              "additionalProperties": false
            },
            "cloudflareCredentials": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string"
                },
                "apiToken": {
                  "type": "string"
                }
              },
              "required": [
                "email",
                "apiToken"
              ],
              "additionalProperties": false
            }
          },
          "required": [
            "letsEncrypt",
            "cloudflareCredentials"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "environment",
        "services",
        "containerRegistryCredentials"
      ],
      "additionalProperties": false
    },
    "defaults": {
      "type": "object",
      "properties": {
        "dependencies": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "const": false
            }
          },
          "required": [
            "enabled"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "dependencies"
      ],
      "additionalProperties": false
    },
    "dev": {
      "type": "object",
      "properties": {
        "domain": {
          "type": "string"
        },
        "dependencies": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "srcPath": {
                "type": "string"
              }
            },
            "required": [
              "srcPath"
            ],
            "additionalProperties": false
          },
          "minProperties": 1
        },
        "release": {
          "type": "object",
          "properties": {
            "prodBranch": {
              "type": "string"
            },
            "prodKubernetesCredentials": {
              "type": "object",
              "properties": {
                "server": {
                  "type": "string"
                },
                "certificateAuthority": {
                  "type": "string"
                },
                "clientCertificate": {
                  "type": "string"
                },
                "clientKey": {
                  "type": "string"
                },
                "username": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              },
              "required": [
                "server",
                "certificateAuthority"
              ],
              "oneOf": [
                {
                  "required": [
                    "clientCertificate",
                    "clientKey"
                  ]
                },
                {
                  "required": [
                    "username",
                    "password"
                  ]
                }
              ],
              "additionalProperties": false
            }
          },
          "required": [
            "prodBranch",
            "prodKubernetesCredentials"
          ],
          "additionalProperties": false
        },
        "imagePath": {
          "type": "string"
        },
        "gitCredentials": {
          "type": "object",
          "properties": {
            "username": {
              "type": "string"
            },
            "password": {
              "type": "string"
            }
          },
          "required": [
            "username",
            "password"
          ],
          "additionalProperties": false
        },
        "global": {
          "type": "object"
        }
      },
      "required": [
        "domain",
        "imagePath"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "global",
    "defaults"
  ],
  "additionalProperties": false
}
