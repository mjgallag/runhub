{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "domain": {
      "type": "string"
    },
    "dependencies": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "srcPath": {
            "type": "string"
          }
        },
        "required": [
          "srcPath"
        ],
        "additionalProperties": false
      },
      "minProperties": 1
    },
    "imagePath": {
      "type": "string"
    },
    "gitCredentials": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "required": [
        "username",
        "password"
      ],
      "additionalProperties": false
    },
    "release": {
      "type": "object",
      "properties": {
        "prodBranch": {
          "type": "string"
        },
        "prodKubernetesCredentials": {
          "type": "object",
          "properties": {
            "clusterServer": {
              "type": "string"
            },
            "clusterCertificateAuthorityData": {
              "type": "string"
            },
            "serviceAccountToken": {
              "type": "string"
            }
          },
          "required": [
            "clusterServer",
            "clusterCertificateAuthorityData",
            "serviceAccountToken"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "prodBranch",
        "prodKubernetesCredentials"
      ],
      "additionalProperties": false
    },
    "global": {
      "type": "object"
    }
  },
  "required": [
    "domain",
    "imagePath",
    "global"
  ],
  "additionalProperties": false
}
