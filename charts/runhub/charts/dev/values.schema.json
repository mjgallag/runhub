{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "domain": {
      "type": "string"
    },
    "services": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "subdomain": {
            "type": "string"
          },
          "srcPath": {
            "type": "string"
          }
        },
        "required": [
          "subdomain",
          "srcPath"
        ],
        "additionalProperties": false
      },
      "minProperties": 1
    },
    "dependencies": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "srcPath": {
            "type": "string"
          }
        },
        "required": [
          "srcPath"
        ],
        "additionalProperties": false
      },
      "minProperties": 1
    },
    "release": {
      "type": "object",
      "properties": {
        "prodDomain": {
          "type": "string"
        },
        "prodBranch": {
          "type": "string"
        }
      },
      "required": [
        "prodDomain",
        "prodBranch"
      ],
      "additionalProperties": false
    },
    "imagePath": {
      "type": "string"
    },
    "gitCredentials": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "required": [
        "username",
        "password"
      ],
      "additionalProperties": false
    },
    "global": {
      "type": "object"
    }
  },
  "required": [
    "domain",
    "services",
    "imagePath",
    "global"
  ],
  "additionalProperties": false
}
