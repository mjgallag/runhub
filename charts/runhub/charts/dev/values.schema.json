{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "domain": {
      "type": "string"
    },
    "services": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "subdomain": {
            "type": "string"
          },
          "srcPath": {
            "type": "string"
          }
        },
        "required": [
          "subdomain",
          "srcPath"
        ],
        "additionalProperties": false
      },
      "minProperties": 1
    },
    "dependencies": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "srcPath": {
            "type": "string"
          }
        },
        "required": [
          "srcPath"
        ],
        "additionalProperties": false
      },
      "minProperties": 1
    },
    "imagePath": {
      "type": "string"
    },
    "credentials": {
      "type": "object",
      "properties": {
        "git": {
          "type": "object",
          "properties": {
            "username": {
              "type": "string"
            },
            "password": {
              "type": "string"
            }
          },
          "required": [
            "username",
            "password"
          ],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "global": {
      "type": "object"
    }
  },
  "required": [
    "domain",
    "services",
    "imagePath",
    "credentials",
    "global"
  ],
  "additionalProperties": false
}
