{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "global": {
      "type": "object",
      "properties": {
        "environment": {
          "type": "object",
          "properties": {
            "dev": {
              "type": "boolean",
              "const": true
            },
            "prod": {
              "type": "boolean",
              "const": true
            }
          },
          "minProperties": 1,
          "maxProperties": 1,
          "additionalProperties": false
        },
        "containerRegistryCredentials": {
          "type": "object",
          "properties": {
            "hostname": {
              "type": "string"
            },
            "username": {
              "type": "string"
            },
            "password": {
              "type": "string"
            }
          },
          "required": [
            "hostname",
            "username",
            "password"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "environment",
        "containerRegistryCredentials"
      ]
    },
    "defaults": {
      "type": "object",
      "properties": {
        "dependencies": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "const": false
            }
          },
          "required": [
            "enabled"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "dependencies"
      ],
      "additionalProperties": false
    },
    "dev": {
      "type": "object"
    },
    "knative": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        }
      }
    },
    "tekton": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        }
      }
    }
  },
  "required": [
    "global",
    "defaults"
  ],
  "additionalProperties": false
}
