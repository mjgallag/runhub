{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "environment": {
      "type": "object",
      "properties": {
        "development": {
          "type": "boolean",
          "const": true
        },
        "production": {
          "type": "boolean",
          "const": true
        }
      },
      "minProperties": 1,
      "maxProperties": 1,
      "additionalProperties": false
    },
    "domain": {
      "type": "string"
    },
    "services": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "subdomain": {
            "type": "string"
          },
          "srcPath": {
            "type": "string"
          }
        },
        "required": [
          "subdomain",
          "srcPath"
        ],
        "additionalProperties": false
      }
    },
    "dependencies": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "srcPath": {
            "type": "string"
          }
        },
        "required": [
          "srcPath"
        ],
        "additionalProperties": false
      }
    },
    "imagePath": {
      "type": "string"
    },
    "credentials": {
      "type": "object",
      "properties": {
        "git": {
          "type": "object",
          "properties": {
            "username": {
              "type": "string"
            },
            "password": {
              "type": "string"
            }
          },
          "required": [
            "username",
            "password"
          ],
          "additionalProperties": false
        },
        "containerRegistry": {
          "type": "object",
          "properties": {
            "hostname": {
              "type": "string"
            },
            "username": {
              "type": "string"
            },
            "password": {
              "type": "string"
            }
          },
          "required": [
            "hostname",
            "username",
            "password"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "containerRegistry"
      ],
      "additionalProperties": false
    },
    "defaults": {
      "type": "object",
      "properties": {
        "dependencies": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "const": false
            }
          },
          "required": [
            "enabled"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "dependencies"
      ],
      "additionalProperties": false
    },
    "knative": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "global": {
          "type": "object",
          "additionalProperties": false
        }
      },
      "required": [
        "global"
      ],
      "additionalProperties": false
    },
    "tekton": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "global": {
          "type": "object",
          "additionalProperties": false
        }
      },
      "required": [
        "global"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "environment",
    "domain",
    "services",
    "imagePath",
    "credentials",
    "defaults"
  ],
  "additionalProperties": false
}
